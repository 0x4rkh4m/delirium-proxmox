{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "proxmox-node-lib": {
      "type": "library",
      "root": "libs/proxmox-node-lib",
      "entryFile": "index",
      "sourceRoot": "libs/proxmox-node-lib/src",
      "compilerOptions": {
        "tsConfigPath": "libs/proxmox-node-lib/tsconfig.lib.json"
      }
    }
  }
}